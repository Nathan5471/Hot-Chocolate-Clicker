generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Game {
  id                              Int    @id @default(autoincrement())
  hotChocolates                   BigInt @default(0)
  allTimeHotChocolates            BigInt @default(0)
  hotChocolatesPerClick           BigInt @default(1)
  hotChocolatesPerClickMultiplier Float  @default(1.0)
  hotChocolatesPerSecond          BigInt @default(0)
  purchasedBoosters               Int[]  @default([])
  upgrade1                        Int    @default(0)
  upgrade2                        Int    @default(0)
  upgrade3                        Int    @default(0)
  upgrade4                        Int    @default(0)
  upgrade5                        Int    @default(0)
  upgrade6                        Int    @default(0)
  upgrade7                        Int    @default(0)
  upgrade8                        Int    @default(0)
  upgrade9                        Int    @default(0)
  upgrade10                       Int    @default(0)
  upgrade11                       Int    @default(0)
}
